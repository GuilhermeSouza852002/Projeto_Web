<%- include('../partials/header') %>
  <div class="card text-white bg-dark mb-3" style="max-width: 40rem;" id="backgroundLogin">
    <div class="card-body">
      <form action='/usuarios/login' method='POST'>
        <div class="form-group">
          <label for="emailUsuario">Endereço de email</label>
          <input type="text" class="form-control" id="emailUsuario" aria-describedby="emailHelp" placeholder="Seu email"
            name='useremail'>
        </div>
        <div class="form-group">
          <label for="senhaUsuario">Senha</label>
          <input type="password" class="form-control" id="senhaUsuario" placeholder="Senha" name='password'>
        </div>
        <a class="nav-link active" href="/usuarios/cadastrousuario">Não possuo cadastro</a>
        <a class="nav-link active" href="/home">Voltar ao inicio</a>
        <button class="btn btn-primary">Entrar</button>
      </form>
    </div>
  </div>
  <%- include('../partials/footer') %>