<link rel="stylesheet" href="/css/bootstrap.min.css">
<link rel="stylesheet" href="/css/estilo.css">
<div class="card-body" id="informacao">
    <div class="caixa">
        <h1 style="color: white;">Redefinir usuário</h1><br>
        <form action="/usuarios/<%=usuario.id%>?_method=PATCH" method="POST" class="caixaConteudo">
            <div class="md-form mb-4 pink-textarea active-pink-textarea">
                <i class="fas fa-angle-double-right prefix"></i>
                <label for="nomeUsuario">
                    <h5>Novo nome de usuário:</h5>
                </label>
                <textarea name="username" id="form21" class="md-textarea form-control" cols='50'
                    rows='1'><%=usuario.username%></textarea>
            </div>
            <div class="md-form mb-4 pink-textarea active-pink-textarea">
                <i class="fas fa-angle-double-right prefix"></i>
                <label for="emailUsuario">
                    <h5>Novo email:</h5>
                </label>
                <textarea name="useremail" id="form21" class="md-textarea form-control" cols='50'
                    rows="1"><%=usuario.useremail%></textarea>
            </div>
            <div class="md-form mb-4 pink-textarea active-pink-textarea">
                <i class="fas fa-angle-double-right prefix"></i>
                <label for="password">
                    <h5>Nova senha:</h5>
                </label>
                <textarea name="password" id="form21" class="md-textarea form-control" cols='50'
                    rows="1"><%=usuario.password%></textarea>
            </div>
            <h6><button class="btn btn-primary">Salvar alteração</button>
                <a href="/usuarios/settings">Voltar</a>
            </h6>
    </div>
</div>
</form>
</div>
</div>